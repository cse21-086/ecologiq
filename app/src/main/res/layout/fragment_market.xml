<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blugreen"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".market">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D0000000"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merchandise"
            android:paddingTop="10dp"
            android:fontFamily="@font/monoton_regular"
            android:textColor="@color/white"
            android:textSize="30dp"/>


        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
           android:gravity="center"
            android:layout_gravity="center"

            android:background="@drawable/shoping">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_gradients"
                app:cardElevation="2dp"
                android:gravity="center"
                app:cardCornerRadius="40dp">



            <ImageView
                android:layout_width="390dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:src="@drawable/bags"
                android:scaleType="centerInside"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardview_gradients">

                </View>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bags"
                    android:fontFamily="@font/khand_bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shoping">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_gradients"
                app:cardElevation="2dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="320dp"
                    android:layout_gravity="center"
                    android:src="@drawable/shirts"
                    android:scaleType="centerInside"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardview_gradients"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="shirts"
                    android:fontFamily="@font/khand_bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shoping">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_gradients"
                app:cardElevation="2dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="280dp"
                    android:layout_gravity="center"
                    android:src="@drawable/cap"
                    android:scaleType="centerInside"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardview_gradients"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hats"
                    android:fontFamily="@font/khand_bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>


            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shoping">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_gradients"
                app:cardElevation="2dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:layout_width="390dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:src="@drawable/hoodie"
                    android:scaleType="centerInside"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardview_gradients"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoodies"
                    android:fontFamily="@font/khand_bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>



            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shoping">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_gradients"
                app:cardElevation="2dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:layout_width="390dp"
                    android:layout_height="2430dp"
                    android:layout_gravity="center"
                    android:src="@drawable/merch"
                    android:scaleType="centerInside"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardview_gradients"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Others"
                    android:fontFamily="@font/khand_bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>



            </androidx.cardview.widget.CardView>

        </LinearLayout>








    </LinearLayout>




</ScrollView>



</FrameLayout>