<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/calculator"
    android:background="@drawable/valley2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".calculator">

    <!--this is to darken the background image-->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#45000000"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="30dp"
                android:padding="10dp"
                app:cardBackgroundColor="#446024"
                app:cardCornerRadius="50dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawablePadding="5dp"
                        android:text="@string/travel_statistics"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        android:fontFamily="@font/goldman_bold"
                        android:drawableLeft="@drawable/baseline_directions_walk_24"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="@string/primary_mode_of_travel"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/mukta_regular"
                        android:textStyle="bold" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="225dp"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:paddingTop="5dp"
                app:cardBackgroundColor="@android:color/holo_green_dark"
                app:cardCornerRadius="50dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="356dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/energy_usage"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        android:fontFamily="@font/goldman_bold"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/daily_usage_of_gas_and_other_fuels_at_home"
                        android:textColor="@color/black"

                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/cool_background"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:text="@string/_13_m_u00b3"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <com.google.android.material.slider.RangeSlider
                            android:id="@+id/slide"
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:valueFrom="5"
                            android:valueTo="100"
                            app:haloColor="@color/grey"
                            app:haloRadius="8dp"
                            app:labelBehavior="gone"
                            app:thumbColor="@color/material_dynamic_neutral20"
                            app:thumbElevation="8dp"
                            app:thumbRadius="12dp"
                            app:trackColor="@color/grey"
                            app:trackHeight="3dp" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/daily_usage_of_gas_and_other_fuels_at_work"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/cool_background"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:text="@string/_10_m_u00b3"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                        <com.google.android.material.slider.RangeSlider
                            android:id="@+id/ide"
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:valueFrom="5"
                            android:valueTo="100"
                            app:haloColor="@color/grey"
                            app:haloRadius="8dp"
                            app:labelBehavior="gone"
                            app:thumbColor="@color/material_dynamic_neutral20"
                            app:thumbElevation="8dp"
                            app:thumbRadius="12dp"
                            app:trackColor="?android:attr/colorMultiSelectHighlight"
                            app:trackHeight="3dp" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/material_on_surface_emphasis_medium"
                app:cardCornerRadius="50dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/number_of_household_members"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_green_dark"
                        android:fontFamily="@font/goldman_bold"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:onClick="add"
                            android:src="@drawable/baseline_add_circle_24" />

                        <EditText
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="#183319"
                            android:hint="15"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="40dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:onClick="minus"
                            android:src="@drawable/baseline_indeterminate_check_box_24" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@android:color/holo_green_dark"
                app:cardCornerRadius="50dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Product consuming"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/goldman_bold"
                        android:textSize="23sp" />

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:overScrollMode="always">
                        <LinearLayout
                            android:layout_width="340dp"
                            android:layout_height="80dp"
                            android:paddingLeft="10dp"
                            android:scrollbars="horizontal"
                            android:paddingTop="15dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="5dp"
                                    android:onClick="meat"
                                    android:background="@drawable/imagery"
                                    android:src="@drawable/chicken"/>

                                <CheckBox
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/dairy"
                                    android:background="@drawable/imagery"
                                    android:onClick="dairy" />

                                <CheckBox
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/fruit"
                                    android:background="@drawable/imagery"
                                    android:onClick="fruits" />

                                <CheckBox
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"/>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/vegetable"
                                    android:background="@drawable/imagery"
                                    android:onClick="Vegetables"/>

                                <CheckBox
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/grain"
                                    android:background="@drawable/imagery"
                                    android:onClick="grains" />

                                <CheckBox
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/distillation"
                                    android:onClick="processed_food" />

                                <CheckBox
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp" />
                            </LinearLayout>

                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="?android:attr/textColorTertiary"
                app:cardCornerRadius="50dp"
                app:cardElevation="20dp">
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:overScrollMode="always">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/goldman_bold"
                                android:gravity="center"
                                android:text="@string/waste_production"
                                android:textColor="@android:color/holo_green_dark"
                                android:textSize="23sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center">



                                <LinearLayout
                                    android:layout_width="300dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:background="@drawable/cool_background"
                                    android:orientation="vertical">


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center">

                                        <TextView
                                            android:layout_width="250dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="Bags of waste per week"
                                            android:textColor="@android:color/holo_green_dark"
                                            android:textSize="23sp" />

                                    </LinearLayout>



                                    <com.google.android.material.slider.Slider
                                        android:id="@+id/waste"
                                        android:layout_width="200dp"
                                        android:layout_height="50dp"
                                        android:layout_gravity="center"
                                        android:valueFrom="0"
                                        android:valueTo="10"
                                        android:stepSize="1"
                                        app:haloColor="@color/grey"
                                        app:haloRadius="8dp"
                                        app:labelBehavior="gone"
                                        app:thumbColor="@color/material_dynamic_neutral20"
                                        app:thumbElevation="8dp"
                                        app:thumbRadius="12dp"
                                        app:trackColor="#FF5722"
                                        app:trackHeight="3dp" />


                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingTop="5dp"
                                android:text="Disposal methods practiced"
                                android:fontFamily="@font/alegreyasanssc_bolditalic"
                                android:textColor="@color/white" />

                            <HorizontalScrollView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:overScrollMode="always">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="18dp"
                                    android:scrollbars="horizontal"
                                    android:paddingTop="7dp"
                                    android:paddingBottom="10dp"
                                    android:orientation="horizontal">


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <ImageView
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:layout_marginLeft="5dp"
                                                android:onClick="burning"
                                                android:background="@drawable/imagery"
                                                android:src="@drawable/fire"/>

                                            <CheckBox
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:scaleX="1.7"
                                                android:scaleY="1.7"/>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <ImageView
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:layout_marginLeft="5dp"
                                                android:onClick="composting"
                                                android:background="@drawable/imagery"
                                                android:src="@drawable/compost"/>

                                            <CheckBox
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:scaleX="2"
                                                android:scaleY="2"

                                                android:layout_marginLeft="5dp" />
                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <ImageView
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:layout_marginLeft="5dp"
                                                android:onClick="trashbin"
                                                android:background="@drawable/imagery"
                                                android:src="@drawable/litter"/>

                                            <CheckBox
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:scaleX="2"
                                                android:scaleY="2"
                                                android:layout_marginLeft="5dp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <ImageView
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:layout_marginLeft="5dp"
                                                android:onClick="littering"
                                                android:background="@drawable/imagery"
                                                android:src="@drawable/person"/>

                                            <CheckBox
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:scaleX="2"
                                                android:scaleY="2"

                                                android:layout_marginLeft="5dp" />
                                        </LinearLayout>



                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <ImageView
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:layout_marginLeft="5dp"
                                                android:onClick="all"
                                                android:background="@drawable/imagery"
                                                android:src="@drawable/reduce"/>

                                            <CheckBox
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:scaleX="1.7"
                                                android:scaleY="1.7"
                                                android:layout_marginLeft="5dp" />
                                        </LinearLayout>

                                    </LinearLayout>



                                </LinearLayout>

                            </HorizontalScrollView>

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="50dp"
                app:cardElevation="20dp"/>




        </LinearLayout>
    </ScrollView>
</FrameLayout>