<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:background="@drawable/pattern"
        tools:context=".Donations">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B2000000"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping Details"
                android:gravity="center"

                android:textColor="@color/white"
                android:textSize="50dp"
                android:paddingTop="30dp"
                android:fontFamily="@font/bebas"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="740dp"
            android:orientation="vertical"
            android:background="@drawable/linear"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:fontFamily="@font/khand_bold"
                android:gravity="center"
                android:text="Please fill in the Necessary address Info:"
                android:textColor="@color/grey"
                android:textSize="25dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="First name"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:shadowRadius="8"
                    android:background="@drawable/texts"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Last name"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:shadowRadius="8"
                    android:background="@drawable/texts"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Po box  number"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:shadowRadius="8"
                    android:background="@drawable/texts"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Country of Residence"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:shadowRadius="8"
                    android:background="@drawable/texts"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="City/village"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:shadowRadius="8"
                    android:background="@drawable/texts"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Country zip code"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:shadowRadius="8"
                    android:background="@drawable/texts"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Contry code"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:shadowRadius="8"
                    android:background="@drawable/texts"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="phone number"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:shadowRadius="8"
                    android:background="@drawable/texts"/>



            </LinearLayout>
            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Place order"
                android:backgroundTint="@android:color/holo_green_dark"
                android:shadowRadius="8"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/creepster_regular"/>




        </LinearLayout>

    </FrameLayout>


