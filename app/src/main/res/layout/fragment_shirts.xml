<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/wallpaper2"
    tools:context=".shirts">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D5000000"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/tops"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/dd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shirts"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/alegreyasansc_medium"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:textSize="40dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="100dp"
                android:src="@drawable/baseline_shopping_cart_24"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/shoping">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_gradients"

                app:cardElevation="2dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:layout_width="420dp"
                    android:layout_height="360dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/cl_is_real"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardview_gradients"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$388"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/khand_bold"
                    android:textColor="@color/purple_200"
                    android:layout_gravity="center"
                    android:textSize="30dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">



<Button
    android:layout_width="170dp"
    android:layout_height="40dp"
    android:backgroundTint="@color/grey"
    android:shadowRadius="10"
    android:drawableLeft="@drawable/baseline_arrow_back_24"/>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/grey"
                android:shadowRadius="10"
                android:drawableRight="@drawable/baseline_arrow_forward_24"/>

        </LinearLayout>

<LinearLayout
    android:layout_width="390dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"

    android:background="@drawable/tops"
    android:orientation="horizontal">


    <TextView
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:text="Size"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="60dp">


            <com.google.android.material.chip.Chip
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="extra small" />

            <com.google.android.material.chip.Chip
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="small" />

            <com.google.android.material.chip.Chip
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="medium" />

            <com.google.android.material.chip.Chip
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="large" />

            <com.google.android.material.chip.Chip
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Xlarge" />

            <com.google.android.material.chip.Chip
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="XXlarge" />

        </com.google.android.material.chip.ChipGroup>


    </HorizontalScrollView>

</LinearLayout>

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:background="@drawable/tops"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="quantity"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="60dp">


                    <com.google.android.material.chip.Chip
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="1" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="2" />


                    <com.google.android.material.chip.Chip
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="3" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="4" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="5" />

                </com.google.android.material.chip.ChipGroup>


            </HorizontalScrollView>

        </LinearLayout>

        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:backgroundTint="#88C68A"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Outlined button"
            android:shadowRadius="8"
            android:textColor="@color/white"/>

    </LinearLayout>

</FrameLayout>