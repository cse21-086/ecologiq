<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/peakpx"
    tools:context=".Create_Account">


    <LinearLayout
        android:layout_width="91dp"
        android:layout_height="51dp"
        android:layout_gravity="left"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingTop="20dp">


        <ImageButton
            android:id="@+id/goback"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            app:srcCompat="@drawable/baseline_arrow_back_24" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="730dp"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="860dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/grey"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:layout_width="171dp"
                android:layout_height="134dp"
                android:layout_gravity="center"
                android:src="@drawable/bb" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sign up"
                android:textAlignment="center"
                android:textColor="#88C68A"
                android:textSize="40dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/full_user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/up"
                android:drawableLeft="@drawable/baseline_perm_identity_24"
                android:drawablePadding="10dp"
                android:hint="Fullname"
                android:paddingLeft="15dp" />

            <EditText
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mids"
                android:drawableLeft="@drawable/baseline_person_pin_24"
                android:drawablePadding="10dp"
                android:hint="Username"
                android:paddingLeft="15dp" />

            <EditText
                android:id="@+id/pw"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mids"
                android:drawableLeft="@drawable/baseline_security_24"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="15dp" />

            <EditText
                android:id="@+id/pw2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mids"
                android:drawableLeft="@drawable/baseline_security_24"
                android:drawablePadding="10dp"
                android:hint="ConfirmPassword"
                android:inputType="textPassword"
                android:paddingLeft="15dp" />



            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/down"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="10dp"
                android:hint="Email Address"
                android:paddingLeft="15dp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch2"
                android:layout_width="167dp"
                android:layout_height="49dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/show_password"/>

            <Button
                android:onClick="proceed"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:backgroundTint="#5B5D65"
                android:drawableLeft="@drawable/baseline_person_add_24"
                android:text="Create Account"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="84dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/fb"
                    android:layout_width="73dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:onClick="fb"
                    android:src="@drawable/facebook001" />

                <ImageView
                    android:id="@+id/gg"
                    android:layout_width="73dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:onClick="gogl"
                    android:src="@drawable/google" />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>









